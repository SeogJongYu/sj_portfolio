{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // "jsxImportSource": "@emotion/react",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "aspect-ratio",
            "elevation",
            "margin-vertical",
            "margin-horizontal",
            "padding-horizontal",
            "padding-vertical",
            "resize-mode",
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "text-align-vertical",
            "tint-color",
            "label"
          ]
        }
      }
    ]
  },
  "include": ["src", "src/Config.tsg.tssrc/Config.tsonfig.ts"],
  "exclude": ["node_modules"]
}
